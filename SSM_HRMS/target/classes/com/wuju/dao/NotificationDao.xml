<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wuju.dao.NotificationDao">
    <insert id="addNotification">
        insert into T_NOTIFICATION values(SEQ_NOTIFY.nextval,#{ntAccount},#{ntPassword},#{user.uId})
    </insert>
    <select id="getNotificationByuId" resultType="com.wuju.model.Notification">
        select * from T_NOTIFICATION where U_ID=#{uId}
    </select>
</mapper>